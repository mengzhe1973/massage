/* pages/introduction/introduction.wxss */

.fit_image {
  width: 100%;
}

.img_header {
  background: #fff;
}

.pro_info {
  background: #fff;
  padding-top: 20rpx;
  width: 100%;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
}

.pro_name {
  padding-left: 20rpx;
  font-weight: bold;
  font-size: 32rpx;
}

.pro_price {
  padding-right: 20rpx;
  color: #eb7b3b;
  font-size: 30rpx;
}

.pro_dec {
  font-size: 24rpx;
  color: #969696;
  background: #fff;
}

.icon_time {
  width: 30rpx;
}

.dec_info {
  padding-top: 26rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  display: flex;
}

.dec_item {
  margin: 0rpx 60rpx 10rpx 10rpx;
}

.divise_line {
  width: 100%;
  height: 1px;
  background: #e2e2e2;
}

.service_flow {
  background: #fff;
  padding-bottom: 20rpx;
}

.service_flow_title {
  font-size: 32rpx;
  margin-top: 20rpx;
  padding: 20rpx 0rpx 20rpx 20rpx;
}

.service_img {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding-top: 16rpx;
}

.service_img image {
  width: 160rpx;
  padding-bottom: 10rpx;
}

.service_img_item {
  display: flex;
  flex-direction: column;
  color: #969696;
  font-size: 22rpx;
}

.explain {
  background: #fff;
  margin-top: 20rpx;
}

/*折叠样式*/

.flod {
  display: none;
}

/*展开样式*/

.extend {
  display: block;
  color: #969696;
  font-size: 26rpx;
  padding: 20rpx;
  border-bottom: 1px #e2e2e2 solid;
}

.service_flow_explain {
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0rpx 20rpx 20rpx;
}

.more {
  width: 30rpx;
  margin-right: 20rpx;
}

